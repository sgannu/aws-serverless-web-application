{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "app/js",
        "declaration": false,
         "typeRoots": [
            "../node_modules/@types"
            ]
    },
    "exclude": [
        "node_modules",
        "app",
         "aws"
    ],
    "compileOnSave": true
    
}
